    const file = e.target.files?.[0];
    if (file) {
      setSaving(true);
      try {
        // Create a local URL to display the image immediately
        const reader = new FileReader();
        reader.onload = (event) => {
          // Display local preview
          setProfile({
            ...profile,
            profilePicture: event.target?.result as string
          });
        };
        reader.readAsDataURL(file);
        
        // Upload to server
        const profilePicturePath = await studentService.uploadProfilePicture(file);
        
        if (profilePicturePath) {
          // Update with server path once uploaded
          setProfile({
            ...profile,
            profilePicture: profilePicturePath
          });
          
          // Update the user in auth context to reflect the changes in the header
          updateUserProfile({
            profileImage: profilePicturePath
          });
          
          setSnackbar({
            open: true,
            message: 'Profile picture uploaded successfully',
            severity: 'success'
          });
        }
      } catch (error) {
        console.error('Error uploading profile picture:', error);
        setSnackbar({
          open: true,
          message: 'Failed to upload profile picture',
          severity: 'error'
        });
