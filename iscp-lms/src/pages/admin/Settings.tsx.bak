    firstName: '',
    lastName: '',
    email: '',
    phone: '',
    adminId: '',
    role: 'System Administrator',
    accessLevel: 'Full Access',
    campus: '',
    preferences: {
      theme: 'dark',
      language: 'English',
      notifications: {
        email: true,
        push: false,
        assignments: true,
        messages: true,
        announcements: true
      },
      privacy: {
        profileVisibility: 'public',
        showOnlineStatus: true,
        showLastSeen: true
      }
    }
  });
  
  const [passwordForm, setPasswordForm] = useState({
    currentPassword: '',
    newPassword: '',
    confirmPassword: ''
  });

  // Load profile data on component mount
  useEffect(() => {
    const loadProfile = async () => {
      setLoading(true);
      try {
        // Get profile from StudentService using the async method
        const savedProfile = await studentService.getUserSettings();
        
        // If profile exists, use it
        if (savedProfile && Object.keys(savedProfile).length > 0) {
          // Map student format to admin format if needed
          setProfile({
            firstName: savedProfile.first_name,
            lastName: savedProfile.last_name,
            email: savedProfile.email,
            phone: savedProfile.phone,
            adminId: String(savedProfile.student_id || ''),
            role: 'System Administrator',
            accessLevel: 'Full Access',
            campus: savedProfile.campus,
            profilePicture: savedProfile.profile_picture,
            preferences: {
              theme: savedProfile.theme as 'light' | 'dark' | 'system',
              language: savedProfile.language,
              notifications: {
                email: savedProfile.email_notifications,
                push: savedProfile.push_notifications,
                assignments: savedProfile.assignment_notifications,
                messages: savedProfile.message_notifications,
                announcements: savedProfile.announcement_notifications
